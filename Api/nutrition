// Serverless function that calls the CalorieNinjas API and returns
// normalized totals for kcal and macros. Add your API key in Vercel:
// Project → Settings → Environment Variables → CALORIE_NINJAS_KEY

export default async function handler(req, res) {
  const q = req.query.q || req.query.query;
  if (!q) {
    res.status(400).json({ error: 'Missing ?q=' });
    return;
  }

  const KEY = process.env.CALORIE_NINJAS_KEY;
  if (!KEY) {
    res.status(500).json({ error: 'Missing CALORIE_NINJAS_KEY env var' });
    return;
  }

  try {
    const apiRes = await fetch(`https://api.calorieninjas.com/v1/nutrition?query=${encodeURIComponent(q)}`, {
      headers: { 'X-Api-Key': KEY },
    });
    const data = await apiRes.json();

    let totals = { kcal: 0, protein_g: 0, carbs_g: 0, fat_g: 0, items: data.items || [] };
    if (Array.isArray(data.items)) {
      for (const it of data.items) {
        totals.kcal += Number(it.calories || 0);
        totals.protein_g += Number(it.protein_g || 0);
        totals.carbs_g += Number(it.carbohydrates_total_g || it.carbohydrates_g || 0);
        totals.fat_g += Number(it.fat_total_g || 0);
      }
    }

    res.status(200).json(totals);
  } catch (err) {
    res.status(500).json({ error: String(err) });
  }
}
